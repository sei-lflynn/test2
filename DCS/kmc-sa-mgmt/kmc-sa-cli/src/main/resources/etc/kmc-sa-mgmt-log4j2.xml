<Configuration status="ERROR">
    <Appenders>
        <RollingFile
                name="file"
                fileName="${sys:app.home}/logs/kmc-sa-mgmt.log"
                filePattern="${sys:app.home}/logs/kmc-sa-mgmt.%d{yyyy-MM-dd}.log.gz"
                ignoreExceptions="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="ERROR">
            <!--            Uncomment to see log to console-->
            <!--            <AppenderRef ref="Console"/>-->
        </Root>
        <Logger name="gov" level="ERROR" additivity="false">
            <AppenderRef ref="file"/>
        </Logger>
        <Logger name="org.hibernate" level="ERROR" additivity="false">
            <AppenderRef ref="file"/>
        </Logger>
        <Logger name="org.bouncycastle" level="ERROR" additivity="false">
            <AppenderRef ref="file"/>
        </Logger>

    </Loggers>
</Configuration>